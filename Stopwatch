milliseconds = 0
seconds = 0
minutes = 0
hours = 0

if milliseconds == 60:
    seconds += 1
    milliseconds = 0
elif seconds == 60:
    minutes += 1
    second = 0
elif minutes == 60:
    hours += 1
    minutes = 0
